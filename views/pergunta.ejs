<%- include ('partials/header.ejs'); %>
<body>
  <%- include ('partials/navbar.ejs'); %> 
  <div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
      <h3>Responda</h3>
      <label for="corpo">Resposta</label>
      <textarea name="corpo" placeholder="Digite sua resposta aqui" class="form-control"></textarea><br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>" >
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
        <div class="card">
          <div class="card-body">
            <p><%= resposta.corpo %></p>
          </div>
        </div> <br>
    <% }) %>
  </div>
  
</body>
<%- include ('partials/footer.ejs'); %> 